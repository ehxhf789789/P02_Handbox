{
  "tool_id": "core-tools/vector-search",
  "version": "1.0.0",
  "display_name": "Vector Search",
  "description": "Search a vector index for similar content",
  "capability_tags": ["rag.search", "data.vector"],
  "input_schema": {
    "ports": [
      { "name": "query_vector", "port_type": "array", "description": "Query embedding vector", "required": true }
    ]
  },
  "output_schema": {
    "ports": [
      { "name": "results", "port_type": "array", "description": "Search results with scores" }
    ]
  },
  "side_effect": "read",
  "required_permissions": ["fs.read"],
  "cost_hint": { "time": "fast", "monetary": "free", "scales_with_input": false },
  "error_model": { "error_types": [], "idempotent": true, "default_retry": { "max_retries": 0, "backoff_ms": 1000, "backoff_multiplier": 2.0, "max_backoff_ms": 30000 } },
  "runtime": { "kind": "native" },
  "config_schema": [
    { "name": "index_name", "field_type": "string", "description": "Index to search", "default_value": "default" },
    { "name": "top_k", "field_type": "number", "description": "Number of results", "default_value": 5 }
  ]
}
