{
  "$schema": "https://raw.githubusercontent.com/nicegui-org/nicegui-on-air-docker-setup/main/tauri-v2-schema.json",
  "productName": "Handbox",
  "version": "0.1.0",
  "identifier": "com.handbox.v2",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../../frontend/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Handbox v2",
        "width": 1400,
        "height": 900,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
